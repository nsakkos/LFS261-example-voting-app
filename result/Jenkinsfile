pipeline {
	agent any
	
	tools{
		NodeJS 'NodeJS 19.0.1'
	}

	stages{
	
		stage ("build"){
                        when{
                                changeset "**/result/**"
                        }
			steps{
				echo 'Compiling result app'
				dir('result'){
          				sh 'npm install'

				}

			}
		}

		stage("test){
			when{
				changeset "**/result/**"
			}
			steps{
				echo 'Testing result app'
				dir ('result'){
					sh 'npm install'
					sh 'npm test'
				}
			}

		}
	}

	post {
		always{
			echo 'Building multibranch pipeline for result is completed...'
		}
	}
}
